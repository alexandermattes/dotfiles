# This tmux statusbar config was created by tmuxline.vim
# on Mo, 18 Apr 2016

set -g status-bg "colour4"
set -g message-command-fg "colour15"
set -g status-justify "left"
set -g status-left-length "100"
set -g status "on"
set -g pane-active-border-fg "colour3"
set -g message-bg "colour8"
set -g status-right-length "100"
set -g status-right-attr "none"
set -g message-fg "colour15"
set -g message-command-bg "colour8"
set -g status-attr "none"
set -g status-utf8 "on"
set -g pane-border-fg "colour8"
set -g status-left-attr "none"
setw -g window-status-fg "colour0"
setw -g window-status-attr "none"
setw -g window-status-activity-bg "colour4"
setw -g window-status-activity-attr "none"
setw -g window-status-activity-fg "colour3"
setw -g window-status-separator ""
setw -g window-status-bg "colour4"
set -g status-left "#[fg=colour0,bg=colour3] #S #[fg=colour3,bg=colour4,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour8,bg=colour4,nobold,nounderscore,noitalics]#[fg=colour15,bg=colour8] %Y-%m-%d  %H:%M #[fg=colour3,bg=colour8,nobold,nounderscore,noitalics]#[fg=colour0,bg=colour3] #h "
setw -g window-status-format "#[fg=colour0,bg=colour4] #I #[fg=colour0,bg=colour4] #W "
setw -g window-status-current-format "#[fg=colour4,bg=colour8,nobold,nounderscore,noitalics]#[fg=colour15,bg=colour8] #I #[fg=colour15,bg=colour8] #W #[fg=colour8,bg=colour4,nobold,nounderscore,noitalics]"
